<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:moadgara="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="moadgara.uicomponent.UIComponentTestViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="@dimen/margin_small">

            <!-- Text Input Layout -->
            <include
                layout="@layout/text_input_layout"
                moadgara:vm="@{vm}" />

            <!-- Alert Dialogs -->
            <include
                layout="@layout/alert_dialog_samples"
                moadgara:vm="@{vm}" />

            <!-- Primary Buttons -->
            <include layout="@layout/primary_buttons" />

            <!-- Primary Button Disabled -->
            <include layout="@layout/primary_disabled_buttons" />

            <!-- Primary Button Disabled -->
            <include layout="@layout/primary_buttons_with_icon" />

            <!-- Primary Button Disabled -->
            <include layout="@layout/primary_disabled_buttons_with_icon" />

            <!-- Light Button -->
            <include layout="@layout/light_buttons" />

            <!-- Light Disabled Button -->
            <include layout="@layout/light_buttons_disabled" />

            <!-- Light Button -->
            <include layout="@layout/light_buttons_with_icon" />

            <!-- Light Disabled Button -->
            <include layout="@layout/light_buttons_disabled_with_icon" />

            <!-- Outlined Button -->
            <include layout="@layout/outlined_buttons" />

            <!-- Outlined Disabled Button -->
            <include layout="@layout/outlined_buttons_disabled" />

            <!-- Outlined Button -->
            <include layout="@layout/outlined_buttons_with_icon" />

            <!-- Outlined Disabled Button -->
            <include layout="@layout/outlined_buttons_disabled_with_icon" />

            <!-- Text Buttons -->
            <include layout="@layout/text_buttons" />

            <!-- Text Buttons Light -->
            <include layout="@layout/text_buttons_light" />

            <!-- Checkbox -->
            <include layout="@layout/checkbox" />

            <!-- Light Checkbox -->
            <include layout="@layout/checkbox_light" />

            <!-- Radio Button -->
            <include layout="@layout/radio_button" />

            <!-- Switch -->
            <include layout="@layout/switches" />


        </LinearLayout>


    </ScrollView>
</layout>
