<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:orientation="vertical"
        android:padding="@dimen/margin_small">

        <!-- Primary Buttons -->
        <include layout="@layout/primary_buttons" />

        <!-- Primary Button Disabled -->
        <include layout="@layout/primary_disabled_buttons" />

        <!-- Primary Button Disabled -->
        <include layout="@layout/primary_buttons_with_icon" />

        <!-- Primary Button Disabled -->
        <include layout="@layout/primary_disabled_buttons_with_icon" />

        <!-- Light Button -->
        <include layout="@layout/light_buttons" />

        <!-- Light Disabled Button -->
        <include layout="@layout/light_buttons_disabled" />

        <!-- Light Button -->
        <include layout="@layout/light_buttons_with_icon" />

        <!-- Light Disabled Button -->
        <include layout="@layout/light_buttons_disabled_with_icon" />

        <!-- Outlined Button -->
        <include layout="@layout/outlined_buttons" />

        <!-- Outlined Disabled Button -->
        <include layout="@layout/outlined_buttons_disabled" />

        <!-- Outlined Button -->
        <include layout="@layout/outlined_buttons_with_icon" />

        <!-- Outlined Disabled Button -->
        <include layout="@layout/outlined_buttons_disabled_with_icon" />

        <!-- Text Buttons -->
        <include layout="@layout/text_buttons" />

        <!-- Text Buttons Light -->
        <include layout="@layout/text_buttons_light" />

        <!-- Checkbox -->
        <include layout="@layout/checkbox" />

        <!-- Light Checkbox -->
        <include layout="@layout/checkbox_light" />

        <!-- Radio Button -->
        <include layout="@layout/radio_button" />

    </LinearLayout>


</ScrollView>
