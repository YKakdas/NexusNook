<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:background="@color/sapphire"
    android:orientation="vertical"
    android:padding="@dimen/margin_small">

    <Button
        style="@style/Widget.Moadgara.Button.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_tiny"
        android:text="Light Iconed"
        app:icon="@drawable/abc_vector_test" />

    <Button
        style="@style/Widget.Moadgara.Button.Light.Rounded.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_tiny"
        app:icon="@drawable/abc_vector_test"
        android:text="Light Iconed Rounded Small" />

    <Button
        style="@style/Widget.Moadgara.Button.Light.Rounded.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_tiny"
        app:icon="@drawable/abc_vector_test"
        android:text="Light Iconed Rounded Medium" />

    <Button
        style="@style/Widget.Moadgara.Button.Light.Rounded.High"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_tiny"
        app:icon="@drawable/abc_vector_test"
        android:text="Light Iconed Rounded High" />
</LinearLayout>