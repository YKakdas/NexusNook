<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:background="@color/bumblebee"
    android:orientation="vertical"
    android:padding="@dimen/margin_small">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_tiny"
        android:text="Primary Iconed"
        app:icon="@drawable/abc_vector_test" />

    <Button
        style="@style/Widget.Moadgara.Button.Rounded.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_tiny"
        android:text="Primary Iconed Rounded Small"
        app:icon="@drawable/abc_vector_test" />

    <Button
        style="@style/Widget.Moadgara.Button.Rounded.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_tiny"
        android:text="Primary Iconed Rounded Medium"
        app:icon="@drawable/abc_vector_test" />

    <Button
        style="@style/Widget.Moadgara.Button.Rounded.High"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_tiny"
        android:text="Primary Iconed Rounded High"
        app:icon="@drawable/abc_vector_test" />
</LinearLayout>