<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:background="@color/dark_cerulean"
    android:orientation="vertical"
    android:padding="@dimen/margin_small">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_tiny"
        android:enabled="false"
        android:text="Primary Disabled" />

    <Button
        style="@style/Widget.Moadgara.Button.Rounded.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_tiny"
        android:enabled="false"
        android:text="Primary Disabled Rounded Small" />

    <Button
        style="@style/Widget.Moadgara.Button.Rounded.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_tiny"
        android:enabled="false"
        android:text="Primary Disabled Rounded Medium" />

    <Button
        style="@style/Widget.Moadgara.Button.Rounded.High"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_tiny"
        android:enabled="false"
        android:text="Primary Disabled Rounded High" />
</LinearLayout>