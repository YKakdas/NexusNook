<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:state_checked="true">
                <shape android:shape="rectangle">
                    <size android:width="20dp" android:height="20dp" />
                    <corners android:radius="2dp" />
                    <solid android:color="@color/checkbox_color_light" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_check_colored" android:gravity="center" />

        </layer-list>
    </item>
    <item>
        <shape android:shape="rectangle">
            <size android:width="20dp" android:height="20dp" />
            <corners android:radius="2dp" />
            <solid android:color="@color/checkbox_inner_color" />
            <stroke android:width="1dp" android:color="@color/cool_grey" />
        </shape>
    </item>
</selector>