<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:gravity="center">
                <shape android:shape="oval">
                    <size android:width="22dp" android:height="22dp" />
                    <solid android:color="@color/white" />
                </shape>
            </item>
            <item android:gravity="center">
                <shape android:shape="oval">
                    <size android:width="14dp" android:height="14dp" />
                    <solid android:color="@color/radio_button_color" />
                </shape>
            </item>
            <item android:gravity="center">
                <shape android:shape="oval">
                    <size android:width="24dp" android:height="24dp" />
                    <stroke android:width="2dp" android:color="@color/cool_grey" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="oval" android:tint="@color/radio_button_inner_color">
                    <size android:width="22dp" android:height="22dp" />
                </shape>
            </item>
            <item android:gravity="center">
                <shape android:shape="oval">
                    <size android:width="24dp" android:height="24dp" />
                    <stroke android:width="2dp" android:color="@color/cool_grey" />
                </shape>
            </item>
        </layer-list>

    </item>
</selector>
