<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Primary Button -->
    <style name="Widget.Moadgara.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_button_background_color</item>
        <item name="rippleColor">@color/primary_button_selected</item>
        <item name="android:textColor">@color/primary_button_text_color</item>
        <item name="iconTint">@color/primary_button_text_color</item>
        <item name="iconSize">@dimen/button_icon_size</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
        <item name="android:paddingStart">@dimen/margin_small</item>
        <item name="android:paddingEnd">@dimen/margin_small</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:maxHeight">@dimen/button_height</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <style name="Widget.Moadgara.Button.Rounded.Small" parent="Widget.Moadgara.Button">
        <item name="cornerRadius">@dimen/margin_small</item>
    </style>

    <style name="Widget.Moadgara.Button.Rounded.Medium" parent="Widget.Moadgara.Button">
        <item name="cornerRadius">@dimen/margin_medium</item>
    </style>

    <style name="Widget.Moadgara.Button.Rounded.High" parent="Widget.Moadgara.Button">
        <item name="cornerRadius">@dimen/margin_high</item>
    </style>

    <!-- Light Button -->
    <style name="Widget.Moadgara.Button.Light" parent="Widget.Moadgara.Button">
        <item name="backgroundTint">@color/light_button_background_color</item>
        <item name="rippleColor">@color/light_button_selected</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_button_text_color</item>
        <item name="iconTint">@color/light_button_text_color</item>
    </style>

    <style name="Widget.Moadgara.Button.Light.Rounded.Small" parent="Widget.Moadgara.Button.Light">
        <item name="cornerRadius">@dimen/margin_small</item>
    </style>

    <style name="Widget.Moadgara.Button.Light.Rounded.Medium" parent="Widget.Moadgara.Button.Light">
        <item name="cornerRadius">@dimen/margin_medium</item>
    </style>

    <style name="Widget.Moadgara.Button.Light.Rounded.High" parent="Widget.Moadgara.Button.Light">
        <item name="cornerRadius">@dimen/margin_high</item>
    </style>

    <!-- Outlined Button -->
    <style name="Widget.Moadgara.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/outlined_button_default</item>
        <item name="strokeColor">@color/outlined_button_stroke_color</item>
        <item name="rippleColor">@color/outlined_button_ripple</item>
        <item name="android:textColor">@color/outlined_button_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="iconTint">@color/outlined_button_text_color</item>
        <item name="iconSize">@dimen/button_icon_size</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
        <item name="android:paddingStart">@dimen/margin_small</item>
        <item name="android:paddingEnd">@dimen/margin_small</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:maxHeight">@dimen/button_height</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="strokeWidth">@dimen/outlined_button_stroke_width</item>
    </style>

    <style name="Widget.Moadgara.Button.Outlined.Rounded.Small" parent="Widget.Moadgara.Button.Outlined">
        <item name="cornerRadius">@dimen/margin_small</item>
    </style>

    <style name="Widget.Moadgara.Button.Outlined.Rounded.Medium" parent="Widget.Moadgara.Button.Outlined">
        <item name="cornerRadius">@dimen/margin_medium</item>
    </style>

    <style name="Widget.Moadgara.Button.Outlined.Rounded.High" parent="Widget.Moadgara.Button.Outlined">
        <item name="cornerRadius">@dimen/margin_high</item>
    </style>

    <!-- Text Button -->
    <style name="Widget.Moadgara.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/text_button_selected</item>
        <item name="android:textColor">@color/text_button_text_color</item>
        <item name="iconTint">@color/text_button_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="iconSize">@dimen/button_icon_size</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
        <item name="android:padding">0dp</item>
        <item name="android:inset">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:maxHeight">@dimen/button_height</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <!-- Text Button Light-->
    <style name="Widget.Moadgara.Button.TextButton.Light" parent="Widget.Moadgara.Button.TextButton">
        <item name="rippleColor">@color/text_button_selected</item>
        <item name="android:textColor">@color/primary_button_text_color</item>
        <item name="iconTint">@color/primary_button_text_color</item>
    </style>

    <!-- Checkbox -->
    <style name="Widget.Moadgara.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_background</item>
        <item name="android:textColor">@color/checkbox_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/margin_small</item>
        <item name="android:minWidth">@dimen/margin_high</item>
        <item name="android:minHeight">@dimen/margin_high</item>
        <item name="useMaterialThemeColors">false</item>
    </style>

    <style name="Widget.Moadgara.CheckBox.Light" parent="Widget.Moadgara.CheckBox">
        <item name="android:button">@drawable/checkbox_background_light</item>
        <item name="android:textColor">@color/checkbox_color_light</item>
    </style>

    <!-- Radio Button -->
    <style name="Widget.Moadgara.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_button_background</item>
        <item name="android:textColor">@color/checkbox_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="useMaterialThemeColors">false</item>
        <item name="android:paddingStart">@dimen/margin_small</item>
    </style>

    <!-- Switch -->
    <style name="Widget.Moadgara.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textColor">@color/checkbox_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="useMaterialThemeColors">false</item>
        <item name="switchPadding">@dimen/margin_small</item>
    </style>

    <!-- Text Input Layout -->
    <style name="Widget.Moadgara.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorIconDrawable">@null</item>
        <item name="errorEnabled">false</item>
        <item name="boxStrokeColorOriginal">@color/text_input_layout_box_stroke_color</item>
        <item name="boxStrokeColorOnError">@color/text_input_layout_error_box_stroke_color</item>
        <item name="editTextColor">@color/black</item>
        <item name="hintTextColor">@color/raven</item>
        <item name="android:textColorHint">@color/raven</item>
        <item name="errorColor">@color/rose</item>
        <item name="animationTypeShowError">SLIDE_FADE_IN</item>
        <item name="animationDirectionShowError">LEFT_TO_RIGHT</item>
        <item name="animationDurationShowError">1000</item>
        <item name="animationTypeHideError">SLIDE_FADE_OUT</item>
        <item name="animationDirectionHideError">RIGHT_TO_LEFT</item>
        <item name="animationDurationHideError">1000</item>
    </style>

    <style name="Widget.Moadgara.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">56dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>