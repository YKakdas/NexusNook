<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="moadgara.main.games_detail.listitems.SpannableText" />
    </data>

    <moadgara.uicomponent.SpannableTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:autoLink="web"
        android:minWidth="@dimen/game_detail_summary_spannable_text_min_width"
        android:minHeight="@dimen/game_detail_summary_spannable_text_min_height"
        android:textStyle="bold"
        app:firstSpanText="@{data.firstSpan}"
        app:firstSpanTextColor="@color/cloudy_grey"
        app:firstSpanTextSize="16sp"
        app:secondSpanText="@{data.secondSpan}"
        app:secondSpanTextColor="@color/quick_silver"
        app:secondSpanTextSize="14sp" />

</layout>