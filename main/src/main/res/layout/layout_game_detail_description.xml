<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="moadgara.main.games_detail.listitems.GameDetailsDescriptionData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_high"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_details_description_title"
            android:textColor="@color/cloudy_grey"
            android:textSize="18sp"
            android:textStyle="bold" />

        <moadgara.uicomponent.ExpandableTextView
            android:id="@+id/expandableDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/margin_small"
            android:textStyle="bold"
            app:body="@{data.description}"
            app:collapsedMaxLines="3"
            app:textColor="@color/quick_silver"
            app:textSize="14sp" />
        
    </LinearLayout>

</layout>