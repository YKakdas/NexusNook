<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="moadgara.data.games.entity.GameDetailsFromIdResponse" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".games_detail.GameDetailsFragment">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/game_detail_top_image_height"
            android:foreground="@drawable/foreground_gradient_shadow_effect"
            android:scaleType="fitXY"
            android:src="@{data.backgroundImageAdditionalUri}"
            app:error="@{@drawable/nexus_nook_image}" />

    </FrameLayout>
</layout>